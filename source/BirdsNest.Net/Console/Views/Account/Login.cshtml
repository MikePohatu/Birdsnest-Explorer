@{
    ViewData["Title"] = "Login";
}
@using Console.ViewModels
@model LoginViewModel

<div class="grid-x grid-margin-x align-center-middle">
    <div class="cell"></div>
    <div class="cell shrink">
        <fieldset class="fieldset loginform" style="max-width: 350px; min-width: 280px;">
            <legend>Login</legend>
            <form id="loginForm" class="cell" type="POST" asp-action="Login" asp-controller="Account"
                  asp-route-returnurl="@ViewData["ReturnUrl"]" asp-route-redirect="@ViewData["Redirect"]">

                <div class="input-group">
                    <input id="username" type="text" asp-for="UserName" placeholder="Username" tabindex="1" autofocus class="small-8 input-group-field" />
                </div>

                <div class="input-group">
                    <input id="pw" type="password" asp-for="Password" placeholder="Password" tabindex="2" class="small-8 input-group-field" />
                </div>
                <div class="grid-x">
                    <div class="cell small-3 medium-3">
                        <input id="loginbtn" type="submit" class="button" tabindex="3" value="Login">
                    </div>
                    <div class="cell small-9 medium-9">
                        <small>
                            <b>@ViewBag.Message</b><br />@ViewBag.Errors
                        </small>
                    </div>

                </div>
                @Html.AntiForgeryToken()
            </form>
            <div asp-validation-summary="All"></div>

        </fieldset>
    </div>
    <div class="cell"></div>
</div>
